# -------------------------------
# Backend Server Settings
# -------------------------------
URL=http://localhost
PORT=3000

# -------------------------------
# Database Settings (MongoDB for now)
# -------------------------------
MONGODB_URI=mongodb://localhost:27017/base_backend

# -------------------------------
# Security / Authentication
# -------------------------------
JWT_SECRET_KEY=supersecretkey

# -------------------------------
# Registration & User Settings
# -------------------------------
REGISTER_ENABLED=true
USER_USERNAME_REQUIRED=true
USER_EMAIL_REQUIRED=true
USER_USERNAME_MIN_LENGTH=3
USER_USERNAME_MAX_LENGTH=20
NORMALIZE_EMAILS=true

# -------------------------------
# Cookie Settings
# -------------------------------
COOKIE_NAME=token
COOKIE_EXPIRATION_MINUTES=60

# -------------------------------
# Password Policy
# -------------------------------
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=64
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# -------------------------------
# Password Reset Settings
# -------------------------------
PASSWORD_RESET_WINDOW_MINUTES=30
PASSWORD_RESET_RATE_LIMIT=5
PASSWORD_RESET_EXPIRATION_MINUTES=10
EMAIL_VERIFICATION_EXPIRATION_MINUTES=60

# -------------------------------
# Email (Nodemailer SMTP Settings)
# -------------------------------
NODEMAILER_HOST=smtp.example.com
NODEMAILER_PORT=587
NODEMAILER_USER=you@example.com
NODEMAILER_PASS=yourpassword
NODEMAILER_EMAIL_FROM="My App <noreply@example.com>"

# -------------------------------
# Socket.IO
# -------------------------------
ENABLE_SOCKET_IO=true

# -------------------------------
# Supported Languages
# -------------------------------
SUPPORT_LANGUAGES=en,tr,fr